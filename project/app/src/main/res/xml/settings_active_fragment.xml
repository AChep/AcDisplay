<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_active_title">

    <Preference
        android:enabled="false"
        android:summary="@string/settings_active_description" />

    <PreferenceCategory android:title="@string/settings">

        <CheckBoxPreference
            android:key="active_mode_respect_inactive_time"
            android:title="@string/settings_active_respect_inactive_time_title" />

        <CheckBoxPreference
            android:key="active_mode_disable_on_low_battery"
            android:title="@string/settings_active_disable_on_low_battery_title" />

        <CheckBoxPreference
            android:key="active_mode_without_notifications"
            android:summaryOff="@string/settings_active_enabled_when_notification_list_empty_off"
            android:summaryOn="@string/settings_active_enabled_when_notification_list_empty_on"
            android:title="@string/settings_active_enabled_when_notification_list_empty_title" />

        <CheckBoxPreference
            android:key="active_mode_active_charging"
            android:title="@string/settings_active_active_charging_title" />

        <CheckBoxPreference
            android:key="active_mode_wave_to_wake"
            android:summaryOn="@string/settings_active_wave_to_wake_on"
            android:title="@string/settings_active_wave_to_wake_title" />
    </PreferenceCategory>

