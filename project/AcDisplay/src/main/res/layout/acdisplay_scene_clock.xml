<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scene"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="end">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        layout="@layout/widget_status" />

    <!--
        IF YOU WANT TO CHANGE TOP/BOTTOM MARGINS:
        don't forget to check its style code - you probably
        will need to compensate font margins.
    -->
    <com.achep.acdisplay.widgets.TimeView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/acDisplayClock" />

</LinearLayout>
