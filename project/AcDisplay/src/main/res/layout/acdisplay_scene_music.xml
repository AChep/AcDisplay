<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scene"
    android:layout_width="236dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:minWidth="236dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_media_previous"
            android:scaleType="centerInside"
            android:contentDescription="@string/media_prev_description"
            style="@android:style/Widget.Holo.Button.Borderless.Small" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_media_play"
            android:scaleType="centerInside"
            android:contentDescription="@string/media_play_description"
            style="@android:style/Widget.Holo.Button.Borderless.Small" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_media_next"
            android:scaleType="centerInside"
            android:contentDescription="@string/media_next_description"
            style="@android:style/Widget.Holo.Button.Borderless.Small" />

    </LinearLayout>

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="?attr/acDisplayNotificationTitle" />

    <TextView
        android:id="@+id/artist_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        style="?attr/acDisplayStatus" />

    <com.achep.acdisplay.widgets.TimeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/acDisplayStatus" />

</LinearLayout>
