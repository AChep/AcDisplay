<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_notification_title">

    <CheckBoxPreference
        android:key="notify_wake_up_on"
        android:title="@string/settings_wake_up_on_notification_title"
        android:defaultValue="@bool/config_default_notify_wake_up_on" />

    <CheckBoxPreference
        android:key="notify_low_priority"
        android:title="@string/settings_low_priority_notifications_title"
        android:summaryOn="@string/settings_low_priority_notifications_on"
        android:summaryOff="@string/settings_low_priority_notifications_off"
        android:defaultValue="@bool/config_default_notify_low_priority"/>
    
    <CheckBoxPreference
        android:key="notify_privacy"
        android:title="@string/settings_privacy_notifications_title"
        android:summaryOn="@string/settings_privacy_notifications_on"
        android:summaryOff="@string/settings_privacy_notifications_off"
        android:defaultValue="@bool/config_default_notify_privacy"/>

</PreferenceScreen>